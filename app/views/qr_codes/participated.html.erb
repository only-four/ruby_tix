<div class="text-center">
  <%= link_to '手動報到', attand_list_activity_qr_codes_path(@attand_list_activity_id), class: 'button' %>
  <p>成功報名票號: <%= @qr_code.data %></p>
  <p>掃描時間 <%= @qr_code.created_at.strftime('%Y-%m-%d') %></p>

  <h1>活動參與表</h1>
  <p>現場出席</p>
  <div style="width: 350px; height: 350px; position: relative; left:38%;">
      <div style="width: 100%; height: 40px; position: absolute; top: 45%; left: 0; margin-top: 0px; line-height:19px;  text-align: center; z-index: 999999999999999">        
        <div style="font-size:28px;"><%= @qr_codes.count %>%</div>
        <div style="margin-top: 8px;">已驗票/有效票</div>
        <div><%= @qr_codes.count %>/<%= Ticket.where(@qr_code.event).count %></div>                
      </div>
      <canvas id="js-myChart" width="100" height="100" data-id="<%= @qr_codes.count %>"></canvas>
  </div>
  <p>售票情況</p>
  <div style="width: 350px; height: 350px; position: relative; left:38%;">
      <div style="width: 100%; height: 40px; position: absolute; top: 45%; left: 0; margin-top: 0px; line-height:19px;  text-align: center; z-index: 999999999999999">        
        <div style="font-size:28px;">50%</div>
        <div style="margin-top: 8px;">報名人數/票券上限</div>
        <div>100/200</div>                
      </div>
      <canvas id="js-soldChart" width="100" height="100" data-id="<%= @qr_codes.count %>"></canvas>
  </div>
</div>  

<script>
  window.onload = function(evt){
    evt.preventDefault();
    Swal.fire({
      position: 'center',
      icon: 'success',
      title: '參加成功',
      showConfirmButton: false,
      timer: 2000
    })  
  };
</script>