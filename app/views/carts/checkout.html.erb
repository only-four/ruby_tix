<div class="container my-10">
  <h2 class="mt-6 text-center text-4xl font-extrabold text-gray-900 mb-5 extrabold">結帳</h2>
  <%= render "cart"%>
    <%= if @order.errors.full_messages do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>

<div class="container">
  <div class="items-center justify-center px-6 sm:px-6 lg:px-6 pt-6">
    <div class="flex flex-col mb-10">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <div class="min-w-full divide-y divide-gray-200">

              <div>
                <%= form_with(model: @order) do |form|%>
                  <div class="flex flex-col items-center text-white">
                    <div colspan="2" class="lg:text-lg text-3xl t-thead w-full text-center py-3">請填入票券使用者資料</th>
                  </div>
                
                <div class="table-row-group">
                  <div class= "my-5 px-2 flex align-middle">
                    <div scope="col" class="w-1/2 px-1 text-right text-lg font-normal text-gray-900 uppercase tracking-wider">
                      <%= form.label:姓名：, class:"mb-0 lg:text-lg text-3xl" %>
                    </div>
                    <div scope="col"><%= form.text_field:participant,value: current_user.name, class: "t-checkout-input lg:text-lg text-3xl appearance-none rounded-none relative block border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 lg:text-lg" %>
                    </div>
                  </div>

                  <div class= "my-5 px-2 flex align-middle">
                    <div scope="col" class="w-1/2 px-1 text-right text-lg font-normal text-gray-900 uppercase tracking-wider">
                      <%= form.label:電子信箱：, class:"mb-0 lg:text-lg text-3xl" %>
                    </div>
                    <div scope="col"><%= form.text_field:address,value: current_user.email, class: "t-checkout-input lg:text-lg text-3xl appearance-none rounded-none relative block border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 lg:text-lg" %>
                    </div>
                  </div>
                
                  <div class="flex justify-center mb-8">
                    <div scope="col" class="px-1 w-1/2 mr-5 text-center text-lg font-normal text-gray-900 uppercase tracking-wider">
                      <%= form.submit '確認結帳', class: "bg-red-600 hover:bg-red-700 text-white text-3xl lg:text-xl font-bold py-2 px-4 rounded-full" %>
                    </div>
                  </div>
                </div>

                <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
</div>
</div>
</div>
</div>
