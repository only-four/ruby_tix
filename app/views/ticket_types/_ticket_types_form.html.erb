  <div class="js-ticketType-form" id="accordion" new-ticket_types ="<%= form.object.new_record? %>" >
    <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg mb-5 p-10">
      <div class="items-center flex justify-left">
        <div class="nested-hidden-info" >
          <div class="flex">
            <div>
              <%= form.label :title, '票券名稱'%>
              <%= form.text_field:title, class: "appearance-none rounded-none relative   py-2 w-2.5 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 mx-4" %>
            </div>
            <div>
              <%= form.label :quantity, '票券數量'%>
              <%= form.number_field:quantity, min: 0, class: "appearance-none rounded-none relative   py-2 w-2.5 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 mx-3" %>
            </div>
            <div>
              <%= form.label :price, '票券單價'%>
              <%= form.number_field:price, min:0, class: "appearance-none rounded-none relative py-2 w-2.5 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 mx-3" %>
            </div>
          </div>

          <div class="flex items-center mt-3">
            <%= form.label :sell_start, '售票開始日', class:"mr-6" %>
            <%= form.datetime_select :sell_start, {:minute_step => 30}, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
            <%#= form.date_field:sell_start, class: "appearance-none rounded-none relative block py-2  border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm mx-4 pl-3 py-2" %>
            <%#= form.time_select:sell_start, {:minute_step => 30}, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
          </div>
          <div class="flex items-center mt-3">
            <%= form.label :sell_deadline, '售票結束日', class:"mr-6" %>
            <%= form.datetime_select :sell_deadline, {:minute_step => 30}, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
            <%#= form.date_field:sell_deadline, class: "appearance-none rounded-none relative block  border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm mx-4 pl-3 py-2" %>
            <%#= form.time_select:sell_deadline, {:minute_step => 30}, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
          </div>

          <div class=" mt-3">
            <%= form.label:content, '票券說明'%> 
            <%= form.rich_text_area :content,placeholder: "請完整說明你的票券內容", class: "appearance-none rounded-none relative block py-2  border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm" %>
          </div>
          <div class="items-center mt-3">
            <%# TODO:做一個checkbox，打勾後可以直接帶入活動時間到 票券有效時間 %>
            <%= check_box_tag "period", class:"period" %> 「票券有效期間」與「活動期間」相同
          </div>
          <div class="flex items-center mt-3">
            <%= form.label :valid_at, '票券有效時間', class:"mr-6"  %>
            <%= form.datetime_select :valid_at, {:minute_step => 30}, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
            <%#= form.date_field:valid_at, class: "appearance-none rounded-none relative block border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm mx-4 pl-3 py-2" %>
            <%#= form.time_select:valid_at, {:minute_step => 30}, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
          </div>
            <%# TODO: 這裡要有一個檢查機制，結束時間要比開始時間晚，至少半小時/一小時？%>
          <div class="flex items-center mt-3">
            <%= form.label :expire_at, '票券過期時間', class:"mr-6"  %>
            <%= form.datetime_select :expire_at, {:minute_step => 30}, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
            <%#= form.date_field:expire_at, class: "appearance-none rounded-none relative block  border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm mx-4 pl-3 py-2" %>
            <%#= form.time_select:expire_at, {:minute_step => 30}, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
          </div>

          <div class="items-center mt-3 grid grid-cols-6 gap-4">
            <%= link_to '#', data: { action: 'ticket-types-form#removeTicketType' } do %>
              <div class= "flex items-center justify-center border-2 rounded-md text-base font-medium  text-red-600 hover:border-red-600 hover:text-red-600 hover:no-underline h-10 px-4">
                <p>刪除此張票卷</p>
                <i class="far fa-trash-alt new-ticket-delete-btn"></i>
              </div>
            <% end %>
          </div>
        </div>
        <%= form.hidden_field :_destroy %>
      </div>
    </div>
  </div> 