  <div class="js-ticketType-form" id="accordion" new-ticket_types ="<%= form.object.new_record? %>" >
    <div class="shadow overflow-hidden border-b-0 border-gray-200 sm:rounded-lg mb-3 p-10">
      <div class="items-center flex justify-left">
                <%# =============== %>
        <div class="nested-hidden-info m-auto">
        <div class="text-gray-300 bg-gray-700 rounded-lg pl-4">有*符號者為必填欄位</div>
          <div class="ticket_title my-2">
            <div>
              <%= form.label :title, '票券名稱*' %>
              <%= form.text_field :title, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2 mx-4 w-2.5" %>
            </div>
          </div>
          <%# =============== %>
          <div class="ticket_price flex my-2">
            <div>
              <%= form.label :quantity, '票券數量*'%>
              <%= form.number_field :quantity, min: 0, max: 10000, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2 mx-4 w-2.5" %>
            </div>
            <div>
              <%= form.label :price, '票券單價*'%>
              <%= form.number_field :price, min:0, max: 1000000, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2 mx-3 w-2.5" %>
            </div>
          </div>

          <div class="ticket_selldate my-2">
            <%= form.label :sell_start, '售票開始*' %>
            <%= form.date_field :sell_start, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm ml-4 pl-3 py-2" %>            
            <%= form.time_select :sell_start, {:ignore_date => true, :minute_step => 30}, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
          </div>
          <div class="ticket_deaddate my-2">
            <%= form.label :sell_deadline, '售票結束*' %>
            <%= form.date_field :sell_deadline, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm ml-4 pl-3 py-2" %>
            <%= form.time_select :sell_deadline, {:ignore_date => true, :minute_step => 30}, class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
          </div>

          <div class="ticket_content my-2">
            <%= form.label :content, '票券說明' %>
            <%= form.rich_text_area :content,placeholder: "請完整說明你的票券內容", class: "appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm" %>
          </div>

          <div class="items-center mt-3">
            <%# TODO:做一個checkbox，打勾後可以直接帶入活動時間到 票券有效時間 %>
            <div class="js-checkbox">
            <%= check_box_tag "period", class:"period" %> 「票券有效期間」與「活動期間」相同
            </div>
          </div>

          <div class="flex items-center mt-3">
            <%= form.label :valid_at, '票券有效時間*' %>
            <%= form.date_field :valid_at, class: "js-ticket_valid_at_date appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm ml-4 pl-3 py-2" %>
            <%= form.time_select :valid_at, {:ignore_date => true, :minute_step => 30}, class: "js-ticket_valid_at_date appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
          </div>
            <%# TODO: 這裡要有一個檢查機制，結束時間要比開始時間晚，至少半小時/一小時？%>
          <div class="flex items-center my-3">
            <%= form.label :expire_at, '票券過期時間*' %>
            <%= form.date_field :expire_at, class: "js-ticket_expire_at_date appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm ml-4 pl-3 py-2" %>
            <%= form.time_select :expire_at, {:ignore_date => true, :minute_step => 30}, class: "js-ticket_expire_at_date appearance-none rounded-none relative border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md bg-gray-100 focus:bg-white focus:z-10 sm:text-sm px-3 py-2" %>
          </div>
          <div class="items-center mt-3 grid grid-cols-6 md:grid-cols-3 gap-4">
            <%= link_to '#', data: { action: 'ticket-types-form#removeTicketType' } do %>
              <div class= "flex items-center justify-between border-2 rounded-md text-base font-medium text-red-600 hover:border-red-600 hover:text-red-600 hover:no-underline h-10 px-8">
                <p class= "">刪除此張票券</p>
                <i class="far fa-trash-alt new-ticket-delete-btn ml-2"></i>
              </div>
            <% end %>
          </div>
          
        </div>
        <%= form.hidden_field :_destroy %>
      </div>
    </div>
  </div> 
