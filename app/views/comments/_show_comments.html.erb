<% comments.each.with_index(1) do |comment, index| %>
  <div class="commentBox p-3 flex items-center justify-center" id="js-commentBoxx">
    <div class="bg-white border shadow-sm px-4 py-3 rounded-lg w-1/2 md:w-4/5 md:text-xl sm:w-screen">

      <div class="flex items-center">
        <div class="h-12 w-12 rounded-full">         
          <% if comment.user.image_url.present? %>
            <%= image_tag comment.user.image_url if comment.user.image_url.present? %> 
          <% else %>
            <i class="far fa-user fa-2x t-nav-btn"></i>
          <% end %>
        </div>
        
        <div>
          <div class="text-sm">
            <span class="font-semibold"><%= comment.user.name %></span>
            <span class="text-gray-500"></span>
          </div>
          
          <div class="text-gray-500 text-xs flex">
            <span class="inline-block"><%= comment.created_at&.strftime("%Y/%m/%d/%H:%M")  %></span>
            <svg class="inline-block ml-1 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" data-supported-dps="16x16" fill="currentColor" class="mercado-match" width="16" height="16" focusable="false">
            </svg>
          </div>        
        </div>
      </div>

      <div class="text-gray-800 text-sm mt-2 leading-normal md:leading-relaxed border-gray-700"><%= comment.content %></div>    
      <div class="text-gray-500 text-xs flex items-center mt-3">
        <%= (link_to '刪除', activity_comment_path(@activity, comment), remote: true, method: "delete", class: "js-removeBtn", data: { confirm: "確認刪除？" }) if current_user == comment.user %>
      </div>
    </div>
  </div>
<% end %>
