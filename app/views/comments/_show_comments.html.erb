
<% comments.each.with_index(1) do |comment, index| %>
  <div class=" commentBox p-3 flex items-center justify-center" id="js-commentBoxx">
    <div class="bg-white border shadow-sm px-4 py-3 rounded-lg max-w-lg">

      <div class="flex items-center">
        <div class="h-12 w-12 rounded-full"><%= image_tag comment.user.image_url if comment.user.image_url.present? %></div>
        
        <div class="ml-2">
          <div class="text-sm ">
            <span class="font-semibold"><%= comment.user.name %></span>
            <span class="text-gray-500"></span>
          </div>
          
          <div class="text-gray-500 text-xs "><%= comment.user.account_name %></div>
          <div class="text-gray-500 text-xs flex">
            <span class="inline-block"><%= comment.created_at&.strftime("%Y/%m/%d/%H:%M")  %></span>
            <svg class="inline-block ml-1 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" data-supported-dps="16x16" fill="currentColor" class="mercado-match" width="16" height="16" focusable="false">
              <path d="M8 1a7 7 0 107 7 7 7 0 00-7-7zM3 8a5 5 0 011-3l.55.55A1.5 1.5 0 015 6.62v1.07a.75.75 0 00.22.53l.56.56a.75.75 0 00.53.22H7v.69a.75.75 0 00.22.53l.56.56a.75.75 0 01.22.53V13a5 5 0 01-5-5zm6.24 4.83l2-2.46a.75.75 0 00.09-.8l-.58-1.16A.76.76 0 0010 8H7v-.19a.51.51 0 01.28-.45l.38-.19a.74.74 0 01.68 0L9 7.5l.38-.7a1 1 0 00.12-.48v-.85a.78.78 0 01.21-.53l1.07-1.09a5 5 0 01-1.54 9z"></path>
            </svg>
          </div>
        </div>
      </div>

      <p class="text-gray-800 text-sm mt-2 leading-normal md:leading-relaxed"><%= comment.content %></p>
      <div class="text-gray-500 text-xs flex items-center mt-3">
        <img class="mr-0.5" src="https://static-exp1.licdn.com/sc/h/d310t2g24pvdy4pt1jkedo4yb"/>
        <img class="mr-0.5" src="https://static-exp1.licdn.com/sc/h/5thsbmikm6a8uov24ygwd914f"/>
        <img class="mr-0.5" src="https://static-exp1.licdn.com/sc/h/7fx9nkd7mx8avdpqm5hqcbi97"/>
        <span class="ml-1">comment no. <%= comment.id %> </span>
        <%= (link_to '刪除', activity_comment_path(@activity, comment), remote: true, method: "delete", class: "js-removeBtn", data: { confirm: "確認刪除？" }) if current_user == comment.user %>
      </div>

    </div>
  </div>
<% end %>

